<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/diatitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@color/activetab"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.bayer.bayerreward.Fonts.RobotoTextview
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="8.5"
                android:paddingLeft="10dp"
                android:text="Confirmation"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.bayer.bayerreward.Fonts.RobotoTextview
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizesmall" />

            <com.bayer.bayerreward.Fonts.RobotoTextview
                android:id="@+id/txtValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizesmall" />

            <com.bayer.bayerreward.Fonts.RobotoTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Confirm Quantity"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizesmall" />

            <com.bayer.bayerreward.Fonts.RobotoEditext
                android:id="@+id/edit_quantity"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/confirm_edit"
                android:inputType="number"
                android:padding="5dp" />

            <com.bayer.bayerreward.Fonts.RobotoTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to redeem this coupon?"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.bayer.bayerreward.Fonts.RobotoButton
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:background="@color/loginbutton"
                    android:text="Redeem"
                    android:textAllCaps="false"
                    android:textColor="@color/colorwhite" />

                <com.bayer.bayerreward.Fonts.RobotoButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:background="@color/loginbutton"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorwhite" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>