<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/agenda_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="@color/activetab"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

        <com.procialize.singleevent.Fonts.RobotoTextview
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="8.5"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/sendmsg"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/textsizenormal" />

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/imgCancel"
                android:layout_weight="1.5"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:src="@drawable/cancel_btn"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/colorwhite"
            android:orientation="vertical">

            <com.procialize.singleevent.Fonts.RobotoTextview
                android:id="@+id/nametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="To anupam"
                android:textColor="@color/activetab" />


            <EditText
                android:id="@+id/etmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sendmessage"
                android:gravity="top|left"
                android:hint="Type your question..."
                android:imeOptions="actionSend|flagNoEnterAction"
                android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
                android:lines="5"
                android:maxLength="250"
                android:maxLines="10"
                android:minLines="4"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColor="#000" />

            <com.procialize.singleevent.Fonts.RobotoTextview
                android:id="@+id/counttv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="250"
                android:textColor="#000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.procialize.singleevent.Fonts.RobotoButton
                    android:id="@+id/ratebtn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:background="@drawable/speakerbtnbg"
                    android:elevation="@dimen/elevation"
                    android:text="@string/sendmsg"
                    android:textAllCaps="false"
                    android:textColor="@color/colorwhite"
                    android:textSize="14sp" />

                <com.procialize.singleevent.Fonts.RobotoButton
                    android:id="@+id/canclebtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:background="@drawable/speakerbtnbg"
                    android:elevation="@dimen/elevation"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmaller"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>