<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.procialize.singleevent.Activity.VideoViewActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colortoolbar"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:elevation="@dimen/elevation"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-10dp"
                android:contentDescription=" "
                android:src="@drawable/header_logo" />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomlayou"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerInParent="true"
        android:layout_margin="20dp" />


    <!--<ImageView-->
    <!--android:layout_centerInParent="true"-->
    <!--android:layout_below="@+id/appBarLayout"-->
    <!--android:layout_above="@+id/bottomlayou"-->
    <!--android:layout_gravity="center"-->
    <!--android:id="@+id/webView1"-->
    <!--android:transitionName="feedimage"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"/>-->

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/bottomlayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.procialize.singleevent.Fonts.RobotoButton
            android:id="@+id/savebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:background="@drawable/speakerbtnbg"
            android:elevation="@dimen/elevation"
            android:text="@string/save"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/textsizesmall"
            android:textAllCaps="false"/>

        <com.procialize.singleevent.Fonts.RobotoButton
            android:id="@+id/sharebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:background="@drawable/speakerbtnbg"
            android:elevation="@dimen/elevation"
            android:text="@string/share"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/textsizesmall"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>
