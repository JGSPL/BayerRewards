<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.procialize.singleevent.Activity.AgendaDetailActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colortoolbar"
            android:elevation="@dimen/elevation"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_marginLeft="-10dp"
                android:layout_width="150dp"
                android:contentDescription=" "
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/splashlogo"/>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <com.procialize.singleevent.Fonts.RobotoTextview
        android:id="@+id/tvname"
        android:layout_below="@+id/appBarLayout"
        android:layout_margin="@dimen/margin"
        android:layout_centerInParent="true"
        android:textSize="@dimen/textsizenormal"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.procialize.singleevent.Fonts.RobotoTextview
        android:id="@+id/tvdate"
        android:layout_margin="@dimen/margin"
        android:layout_below="@+id/tvname"
        android:layout_centerInParent="true"
        android:textSize="@dimen/textsizesmall"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.procialize.singleevent.Fonts.RobotoTextview
        android:id="@+id/tvtime"
        android:layout_margin="@dimen/margin"
        android:layout_below="@+id/tvdate"
        android:layout_centerInParent="true"
        android:textSize="@dimen/textsizesmall"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_below="@+id/tvtime"
        android:layout_above="@+id/ratebtn"
        android:padding="@dimen/padding"
        android:layout_margin="10dp"
        android:background="@drawable/speakerdatabg"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.procialize.singleevent.Fonts.RobotoTextview
            android:id="@+id/tvdscription"
            android:textSize="@dimen/textsizesmall"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </ScrollView>

    <com.procialize.singleevent.Fonts.RobotoButton
        android:id="@+id/ratebtn"
        android:background="@drawable/speakerbtnbg"
        android:padding="5dp"
        android:elevation="@dimen/elevation"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/textsizesmall"
        android:layout_margin="@dimen/margin"
        android:text="@string/rate"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
