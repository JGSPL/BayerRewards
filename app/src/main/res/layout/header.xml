<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activetab">

    <com.procialize.singleevent.Fonts.RobotoTextview
        android:id="@+id/eventname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my"
        android:background="@color/activetab"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/textsizenormal" />


    <com.procialize.singleevent.Fonts.RobotoTextview
        android:id="@+id/fceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventname"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Face 2017"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fceTv"
        android:layout_below="@+id/fceTv"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/activetab"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center">

                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profileIV"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic_placeholder" />

                <ProgressBar
                    android:id="@+id/progressView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/designationTv"
                    android:layout_alignTop="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmall" />

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/lastNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/designationTv"
                    android:layout_alignTop="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone"/>

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/designationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTv"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmall" />


                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/compantyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/designationTv"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/editIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>