<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.procialize.vivo_app.InnerDrawerActivity.QRScanActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colortoolbar"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:elevation="@dimen/elevation"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/headerlogoIv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-10dp"
                android:contentDescription=" "
                android:src="@drawable/header_logo" />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/qrdecoderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/contactll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <com.procialize.vivo_app.Fonts.RobotoTextview
                    android:id="@+id/signup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:text="@string/createcontact"
                    android:textColor="@color/activetab"
                    android:textSize="@dimen/textsizenormal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center">

                <ScrollView
                    android:id="@+id/scrollview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_username"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/textsizesmall"
                            android:theme="@style/EditTextHint"
                            android:visibility="gone">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_username_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_first_name"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/EditTextHint"
                            android:layout_below="@+id/edit_username"
                            android:hint="@string/firstname">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_first_name_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_username_edit"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_designation"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_first_name"
                            android:hint="@string/designation">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_designation_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_company_name_edit"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_company_name"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/EditTextHint"
                            android:layout_below="@+id/edit_designation"
                            android:hint="@string/company">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_company_name_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_city_edit"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_city"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/EditTextHint"
                            android:layout_below="@+id/edit_company_name"
                            android:hint="@string/city">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_city_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_email_edit"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall"
                                android:visibility="visible" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_email"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/EditTextHint"
                            android:layout_below="@+id/edit_city"
                            android:hint="@string/hint_email">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_email_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_mobile_edit"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:inputType="textEmailAddress"
                                android:minEms="20"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall"
                                android:visibility="visible" />
                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edit_mobile"
                            style="@style/TextLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/EditTextHint"
                            android:layout_below="@+id/edit_email"
                            android:hint="@string/mobile">

                            <com.procialize.vivo_app.Fonts.RobotoTextInputEditext
                                android:id="@+id/edit_mobile_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_first_name_edit"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin"
                                android:editable="false"
                                android:inputType="phone"
                                android:minEms="20"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/textsizesmall"
                                android:visibility="visible" />
                        </android.support.design.widget.TextInputLayout>






                    </RelativeLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:elevation="@dimen/elevation"
                android:gravity="center">

                <com.procialize.vivo_app.Fonts.RobotoButton
                    android:id="@+id/save_btn_qr"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:alpha="1"
                    android:background="@drawable/loginbutton"
                    android:elevation="@dimen/elevation"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="@string/save"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall"
                    android:textStyle="normal" />

                <com.procialize.vivo_app.Fonts.RobotoButton
                    android:id="@+id/cancel_btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbutton"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
