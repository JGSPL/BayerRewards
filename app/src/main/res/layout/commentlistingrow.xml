<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/newsfeedrowbg"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/textcommentContainer"
            android:layout_margin="@dimen/margin"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileIV"
                    android:src="@drawable/profilepic_placeholder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="TODO" />

                <ProgressBar
                    android:visibility="visible"
                    android:id="@+id/progressView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/moreIv"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_more"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/textsizesmall"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/activetab"
                    android:layout_below="@+id/moreIv"
                    android:id="@+id/nameTv" />

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:paddingLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/textsizesmall"
                    android:id="@+id/commentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTv"
                    android:text=""
                    android:textColor="@color/black" />

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/textsizesmall"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commentTv"
                    android:layout_toEndOf="@+id/imageView"
                    android:text=""
                    android:textColor="@color/black"
                    android:id="@+id/dateTv" />

            </RelativeLayout>



        </LinearLayout>

        <ImageView
            android:layout_margin="3dp"
            android:layout_below="@+id/nameTv"
            android:id="@+id/gifIV"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:contentDescription="TODO"
            android:layout_height="100dp" />

        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_below="@+id/nameTv"
            android:visibility="gone"
            android:id="@+id/progressViewgif"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>


</LinearLayout>