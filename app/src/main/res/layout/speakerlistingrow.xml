<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/agendabg"
        android:orientation="horizontal"
        android:padding="5dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileIV"
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_centerInParent="true"
                android:src="@drawable/profilepic_placeholder" />

            <ProgressBar
                android:id="@+id/progressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.procialize.vivo_app.Fonts.RobotoTextview
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/designationTv"
                android:layout_alignTop="@+id/imageView"
                android:paddingLeft="5dp"
                android:text="Abheejit Saxena"
                android:textColor="@color/activetab"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.procialize.vivo_app.Fonts.RobotoTextview
                android:id="@+id/designtionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Simens LTD"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizesmall" />


            <com.procialize.vivo_app.Fonts.RobotoTextview
                android:id="@+id/locationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Delhi"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizesmall" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_rightarrow" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>