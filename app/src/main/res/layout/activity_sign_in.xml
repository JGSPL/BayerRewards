<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Activity.SignupSignInActivity">

    <ImageView
        android:id="@+id/bayerlogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/bayer" />

    <ImageView
        android:id="@+id/rewardlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/bayerlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/logo" />

    <com.bayer.bayerreward.Fonts.RobotoTextview
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rewardlogo"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/activetab"
        android:textSize="@dimen/textsizenormal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <com.bayer.bayerreward.Fonts.RobotoTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Mobile No."
            android:textSize="@dimen/textsizenormal" />

        <com.bayer.bayerreward.Fonts.RobotoTextInputEditext
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittexthmbg"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp" />


        <com.bayer.bayerreward.Fonts.RobotoButton
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite" />
    </LinearLayout>


    <com.bayer.bayerreward.Fonts.RobotoTextview
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorwhite"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>