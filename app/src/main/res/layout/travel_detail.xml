<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/speakerbtnbg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/tickets"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@drawable/pollquizrow"
        android:orientation="vertical"
        android:padding="5dp">


        <com.procialize.singleevent.Fonts.RobotoTextview
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/designationTv"
            android:layout_alignTop="@+id/imageView"
            android:layout_gravity="top"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center|center_horizontal"
            android:padding="5dp"
            android:text="Abheejit Saxena"
            android:textColor="@color/black"
            android:textSize="@dimen/textsizenormal" />


    </LinearLayout>


</LinearLayout>