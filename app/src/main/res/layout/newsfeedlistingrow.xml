<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/mindTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pullrefresh"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittexthmbg"
            android:gravity="center"
            android:orientation="horizontal">

            <com.procialize.singleevent.CustomTools.ScaledImageView
                android:id="@+id/profilestatus"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/profilepic_placeholder"
                android:scaleType="centerCrop" />


            <com.procialize.singleevent.Fonts.RobotoTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="@string/whatsmind"
                android:textSize="@dimen/textsizesmall"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLLpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mindTv"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/linearlayoutbg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:id="@+id/txtfeedRv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/post_status" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/linecolor" />

            <RelativeLayout
                android:id="@+id/imagefeedRv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/post_image" />

            </RelativeLayout>

            <View
                android:id="@+id/viewteo"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/linecolor" />

            <RelativeLayout
                android:id="@+id/videofeedRv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="2dp"

                    android:layout_centerInParent="true"
                    android:src="@drawable/post_video" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/feedll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/newsfeedrowbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2">

                <com.procialize.singleevent.CustomTools.ScaledImageView
                    android:id="@+id/profileIV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic_placeholder" />


                <ProgressBar
                    android:id="@+id/progressView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="5.75"
                android:orientation="vertical">

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/designationTv"
                    android:layout_alignTop="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/activetab"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/designationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTv"
                    android:layout_toEndOf="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />


                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/companyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/designationTv"
                    android:layout_toEndOf="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"

                android:layout_weight="2.25">
                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/dateTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="right"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/editIV"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_blackedit"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/moreIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:src="@drawable/ic_more" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <com.procialize.singleevent.Fonts.RobotoTextview
            android:id="@+id/headingTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/textsizesmall" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.procialize.singleevent.CustomTools.ScaledImageView
                android:id="@+id/feedimageIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/feedprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/playicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/play"
                android:transitionName="feedimage"
                android:visibility="gone" />

            <com.procialize.singleevent.CustomTools.MyJZVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linecolor"
            android:visibility="gone"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/likeTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/liketext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingTop="4dp"
                    android:text="0 Like"
                    android:textColor="@color/inactivetab"
                    android:textSize="@dimen/textsizesmaller" />

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/img_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:gravity="center" />


            </LinearLayout>

            <View
                android:id="@+id/viewone"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="@color/colorwhite"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/commentTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/commenttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/ic_comment"
                    android:gravity="center"
                    android:text="0 Comments"
                    android:textColor="@color/inactivetab"
                    android:textSize="@dimen/textsizesmaller" />

            </LinearLayout>

            <View
                android:id="@+id/viewtwo"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="@color/colorwhite"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/shareTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.procialize.singleevent.Fonts.RobotoTextview
                    android:id="@+id/sharetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/ic_share"
                    android:gravity="center"
                    android:text="Share"
                    android:textColor="@color/inactivetab"
                    android:textSize="@dimen/textsizesmaller" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>