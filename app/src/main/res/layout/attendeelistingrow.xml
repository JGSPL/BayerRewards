<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainLL"
        android:elevation="@dimen/elevation"
        android:padding="5dp"
        android:translationZ="@dimen/elevation"
        android:background="@drawable/agendabg"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileIV"
                android:layout_centerInParent="true"
                android:src="@drawable/profilepic_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:visibility="visible"
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.procialize.singleevent.Fonts.RobotoTextview
                android:paddingLeft="5dp"
                android:textSize="@dimen/textsizenormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abheejit Saxena"
                android:textColor="@color/loginbutton"
                android:id="@+id/nameTv" />

            <com.procialize.singleevent.Fonts.RobotoTextview
                android:paddingLeft="5dp"
                android:id="@+id/designationTv"
                android:textSize="@dimen/textsizesmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simens LTD"
                android:textColor="@color/colorwhite" />


            <com.procialize.singleevent.Fonts.RobotoTextview
                android:paddingLeft="5dp"
                android:textSize="@dimen/textsizesmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:textColor="@color/colorwhite"
                android:id="@+id/locationTv" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_rightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>