<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/activetab" />
            <corners android:radius="1dp" />
            <gradient
                android:angle="180"
                android:centerColor="@color/activetab"
                android:endColor="@color/activetab"
                android:startColor="@color/activetab" />
            <stroke
                android:width="1dp"
                android:color="@color/activetab" />
            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/down_arrow" />
    </item>
</layer-list>